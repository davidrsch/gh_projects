{
  "name": "github-projects",
  "displayName": "Github Projects",
  "description": "Lists unique GitHub Projects (Projects v2) associated with repositories in your workspace.",
  "version": "0.0.1",
  "publisher": "your-publisher",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ghProjects.refresh",
        "title": "GitHub: Refresh Projects"
      },
      {
        "command": "ghProjects.openProject",
        "title": "GitHub: Open Project"
      },
      {
        "command": "ghProjects.testTableQueries",
        "title": "GitHub: Test Project Table Queries"
      },
      {
        "command": "ghProjects.checkGh",
        "title": "ghProjects: Check GitHub auth"
      },
      {
        "command": "ghProjects.signIn",
        "title": "Sign in to GitHub"
      },
      {
        "command": "ghProjects.debugDump",
        "title": "GitHub: Debug Dump"
      }
    ],
    "menus": {},
    "viewsContainers": {
      "activitybar": [
        {
          "id": "projects",
          "title": "projects",
          "icon": "./media/projects.svg"
        }
      ]
    },
    "views": {
      "projects": [
        {
          "id": "projects",
          "name": "projects",
          "icon": "./media/projects.svg"
        }
      ]
    },
    "configuration": {
      "title": "GitHub Projects",
      "properties": {
        "ghProjects.maxDepth": {
          "type": "number",
          "default": 4,
          "description": "Scanning depth for findGitRepos (how many directory levels to traverse)."
        },
        "ghProjects.itemsFirst": {
          "type": "number",
          "default": 50,
          "description": "Default 'first' items to fetch when querying project fields."
        },
        "ghProjects.maxConcurrency": {
          "type": "number",
          "default": 4,
          "description": "Max concurrent operations for network/git IO."
        },
        "ghProjects.queryTimeoutMs": {
          "type": "number",
          "default": 30000,
          "description": "Timeout for GitHub queries in milliseconds."
        },
        "ghProjects.useHttpApi": {
          "type": "boolean",
          "default": false,
          "description": "If true, use direct HTTP GraphQL requests. Requires signing in via VS Code GitHub authentication (no GH_TOKEN or ghToken fallback)."
        },
        "ghProjects.useBundledWebviews": {
          "type": "boolean",
          "default": false,
          "description": "When true, load bundled webview scripts from media/dist instead of unbundled originals."
        },
        "ghProjects.debug": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging for ghProjects (writes DEBUG messages to the ghProjects output channel)."
        }
      }
    },
    "chatParticipants": [
      {
        "id": "ghProjects.participant",
        "name": "ghProjects",
        "description": "Manage GitHub Projects",
        "isSticky": true,
        "commands": [
          {
            "name": "list",
            "description": "List all projects"
          },
          {
            "name": "search",
            "description": "Search for projects"
          }
        ]
      }
    ]
  },
  "activationEvents": [
    "*"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./scripts/copy-vscode-elements.js",
    "build:webviews": "node ./scripts/build-webviews.js",
    "lint": "npx eslint 'src/**/*.{ts,js}' --fix || npx prettier --write 'src/**/*.{ts,js,json,md}'",
    "test": "jest --runInBand",
    "test:integration": "npm run compile && npm run build:webviews && node ./out/tests/integration/runIntegrationTests.js",
    "test:report": "node ./tests/integration/scripts/openReport.js",
    "fetch-sample": "npx ts-node src/scripts/fetchSample.ts"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^18.19.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "esbuild": "^0.19.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^30.2.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.3",
    "dotenv": "^16.4.7",
    "playwright": "^1.49.0",
    "@vscode/test-electron": "^2.4.0"
  },
  "dependencies": {
    "@octokit/graphql": "^7.0.2",
    "@primer/octicons": "^19.21.0",
    "@vscode-elements/elements": "^2.3.1",
    "express": "^4.18.2",
    "p-map": "^7.0.4"
  }
}